<CurrencyConverterScreen>:
    MDScreen:
        Image:
            source: "img/bg.jpg "
            size_hint: None, None
            width: "960dp"
            height: "1440dp"
            pos_hint: {'center_x': .5, 'center_y': .5}
            opacity: 0.1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: "300dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDTextField:
                mode: "rectangle"
                id: output_label
                hint_text: " Converted amount"
                halign: "center"
                size_hint_x: None
                theme_text_color: "Secondary"
                font_style: "Body1"
                size_hint_y: None
                width: 300
                readonly: True
                disabled: True
                pos_hint: {'center_x': 0.5}
            MDTextField:
                id: currency1_field
                hint_text:" From"
                mode: "rectangle"
                helper_text: "Enter currency"
                helper_text_mode: "on_focus"
                size_hint_x: None
                width: 300
                size_hint_y: None
                height: "48dp"
                multiline: False
                pos_hint: {'center_x': 0.5}

            MDLabel:
                text: ""
                size_hint: None, None
                size: 150, 50
                pos_hint: {"center_x": 0.5}
                elevation_normal: 8
            MDTextField:
                id: currency2_field
                hint_text: " To"
                mode: "rectangle"
                helper_text: "Enter currency"
                helper_text_mode: "on_focus"
                size_hint_x: None
                width: 300
                size_hint_y: None
                height: "48dp"
                multiline: False
                pos_hint: {'center_x': 0.5}

            MDLabel:
                text: ""
                size_hint: None, None
                size: 150, 50
                pos_hint: {"center_x": 0.5}
                elevation_normal: 8
            MDTextField:
                id: amount_field
                hint_text: "Enter amount"
                mode: "round"
                input_type: "number"
                size_hint_x: None
                width: 300
                size_hint_y: None
                height: "48dp"
                multiline: False
                pos_hint: {'center_x': 0.5}
            MDLabel:
                text: ""
                size_hint: None, None
                size: 150, 50
                pos_hint: {"center_x": 0.5}
                elevation_normal: 8
            MDRectangleFlatButton:
                text: "Convert"
                on_press: app.convert_currency()
                size_hint: None, None
                size: 150, 50
                pos_hint: {"center_x": 0.5}
                elevation_normal: 8
        MDFloatingActionButton:
            icon: "logout"
            md_bg_color: "yellow"
            pos_hint: {"center_x": .9, "center_y": .1}
            on_release: app.logout_button()